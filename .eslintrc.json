{
	"root": true,
	"extends": ["neon/node", "neon/typescript", "neon/prettier", "neon/module"],
	"parserOptions": {
		"project": "./tsconfig.eslint.json"
	},
	"env": {
		"jest": true
	},
	"rules": {
		"@typescript-eslint/ban-types": "off",
		"curly": ["error", "all"],
		"no-multi-assign": "off",
		"no-eq-null": "off"
	}
}

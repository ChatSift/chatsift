{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "ESLint",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"noEmit": true
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.cjs"],
	"exclude": ["**/node_modules", "**/dist", "**/.turbo", "**/coverage"]
}

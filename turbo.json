{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"lint:fix": {
			"dependsOn": ["^build"],
			"cache": false
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"tag-docker": {
			"outputs": [],
			"inputs": ["src/**/*.ts", "Dockerfile"]
		}
	},
	"globalDependencies": [
		"eslint.config.js",
		".prettierrc.json",
		"tsconfig.json",
		"tsconfig.*.json",
		"vitest.config.ts",
		"prisma/schema.prisma"
	]
}

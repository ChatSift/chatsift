{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["tsconfig.json", "package.json", "src/**/*.ts", "tsup.config.ts", "prisma/schema.prisma"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["tsconfig.json", "package.json", "src/**/*.ts"]
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["tsconfig.json", "package.json", "src/**/*.ts", "vitest.config.ts"]
		},
		"tag-docker": {
			"outputs": []
		}
	}
}
